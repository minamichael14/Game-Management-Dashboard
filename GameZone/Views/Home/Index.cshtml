@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}

@if(!Model.Any()){
<div class="alert alert-warning">
    <h4 class="alert-heading">No Games!</h4>
    <p class="mb-0">No games were added yet.</p>
</div>
}


<div class="row">
    @foreach(var game in Model)
    {
        <div class="col-lg-4 col-md-6">
            <a class="card border-secondary bg-primary mb-3 text-decoration-none" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                <div class="rounded-top card-body" style="background-image: url(@($"{FileSettings.ImagePath}/{game.Cover}")); background-size: cover; background-position:center; height:350px">
                    <div class="d-flex align-items-end h-100">
                        <span class="badge bg-primary">@game.Category.Name</span>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between align-item-center" style="height: 56px;">
                    <h5>@game.Name</h5>
                    <div>
                        @foreach(var gamedevice in game.devices)
                        {
                            <i class="@gamedevice.devices.Icon"></i>
                        }
                    </div>
                </div>
                
            </a>
        </div>
        
    }
</div>
